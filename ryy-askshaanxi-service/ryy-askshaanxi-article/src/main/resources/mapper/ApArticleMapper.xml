<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ryy.article.mapper.ApArticleMapper">

    <resultMap id="resultMap" type="com.ryy.model.article.pojos.ApArticle">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="author_id" property="authorId"/>
        <result column="author_name" property="authorName"/>
        <result column="power_id" property="powerId"/>
        <result column="power_name" property="powerName"/>
        <result column="layout" property="layout"/>
        <result column="flag" property="flag"/>
        <result column="is_answered" property="isAnswered"/>
        <result column="images" property="images"/>
        <result column="labels" property="labels"/>
        <result column="votes" property="votes"/>
        <result column="collections" property="collections"/>
        <result column="comments" property="comments"/>
        <result column="views" property="views"/>
        <result column="province_id" property="provinceId"/>
        <result column="city_id" property="cityId"/>
        <result column="county_id" property="countyId"/>
        <result column="created_time" property="createdTime"/>
        <result column="publish_time" property="publishTime"/>
        <result column="sync_status" property="syncStatus"/>
        <result column="static_url" property="staticUrl"/>
    </resultMap>
    <select id="selectAll" resultMap="resultMap">
        SELECT * FROM `ap_article`
    </select>
    <select id="loadArticleList" resultMap="resultMap">
        SELECT aa.* FROM `ap_article` aa LEFT JOIN ap_article_config aac ON aa.id = aac.article_id
        <where>
            and aac.is_delete != 1 and aac.is_down != 1
            <!--  loadmore  -->
            <if test="type != null and type == 1">
                and aa.publish_time
                <![CDATA[ < ]]>
                #{dto.minBehotTime}
            </if>
            <if test="type != null and type == 2">
                and aa.publish_time
                <![CDATA[ > ]]>
                #{dto.maxBehotTime}
            </if>
            <if test="dto.tag != '__all__'"> and aa.power_id = #{dto.tag} </if>
        </where>
        order by aa.publish_time desc limit #{dto.size}
    </select>

</mapper>